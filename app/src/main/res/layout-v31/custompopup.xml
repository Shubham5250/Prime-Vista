<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="X"
        android:textStyle="bold"
        android:textColor="#E60E1F53"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select the number of rooms"
        android:textColor="#E60E1F53"
        android:textSize="22sp"
        android:padding="7dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/select1"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_background"
            android:text="1" />

        <Button
            android:id="@+id/select2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"

            android:background="@drawable/edit_text_background"
             />

        <Button
            android:id="@+id/select3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:background="@drawable/edit_text_background"

            />

        <Button
            android:id="@+id/select4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:background="@drawable/edit_text_background"

         />

        <Button
            android:id="@+id/select5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:text="5"

             />

        <Button
            android:id="@+id/select6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:text="6"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fromDate"
            android:onClick="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/fromDate" />

        <ImageView
            android:id="@+id/datefrom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"

            app:srcCompat="@drawable/ic_baseline_calendar_month_24" />

        <EditText
            android:id="@+id/todate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/toDate" />

    </LinearLayout>

    <Button
        android:id="@+id/proceedbookingbtn"
        android:layout_width="match_parent"
        android:layout_height="63dp"

        android:backgroundTint="#E60E1F53"
        android:text="Proceed to book"
        android:textColor="@color/white" />

</LinearLayout>