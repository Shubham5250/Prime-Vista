<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="583dp"
        android:layout_height="971dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/primevistahome" />

    <TextView
        android:id="@+id/primevista"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/baloo_bhaijaan"
        android:text="Prime Vista"
        android:textColor="#36B1B5"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/subheadhome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subheadhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="The largest hotel chain of India"
        android:textColor="#AEDFCB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/primevista" />

    <Button
        android:id="@+id/loginbut"
        android:layout_width="252dp"
        android:layout_height="71dp"
        android:layout_marginTop="424dp"
        android:backgroundTint="#36B1B5"
        android:onClick="locations"
        android:text="expolre"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subheadhome" />

</androidx.constraintlayout.widget.ConstraintLayout>